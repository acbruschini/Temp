#include <stdio.h>
#include <stdlib.h>

int sumar(int operador1, int operador2);
int restar(int operador1, int operador2);
int multiplicar(int operador1, int operador2);
int dividir(int operador1, int operador2);

int main(void) {

    setbuf(stdout, NULL);

	int num1;
	int num2;
	char operacion;
	int resultado;

	printf ("Ingrese el primer numero\n");
	scanf("%d", &num1);
	printf ("Ingrese la operacion3\n");
	scanf("%s",&operacion);
	printf ("Ingrese el segundo numero\n");
	scanf("%d", &num2);

	switch (operacion) {

	case '+':

		resultado = sumar(num1,num2);
		break;

	case '-':
		resultado = restar(num1,num2);
		break;

	case '*':
		resultado = multiplicar(num1,num2);
		break;

	case '/':
		(float)resultado = dividir(num1,num2);
		break;

	}

	printf("El resultado es: %d", resultado);

return EXIT_SUCCESS;
}

int sumar(int operador1, int operador2) {

	int resultado;
	resultado = operador1 + operador2;

	return resultado;
	}
int restar(int operador1, int operador2) {

	int resultado;
	resultado = operador1 - operador2;

	return resultado;
	}
int multiplicar(int operador1, int operador2) {

	int resultado;
	resultado = operador1 * operador2;

	return resultado;
	}
int dividir(int operador1, int operador2) {

	int resultado;
	if (operador2 != 0) {
		resultado = operador1 / operador2;
	}

	return (float) resultado;
}
