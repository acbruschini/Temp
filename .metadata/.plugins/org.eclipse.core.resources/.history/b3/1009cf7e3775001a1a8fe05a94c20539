#include <stdio.h>
#include <stdlib.h>

int sumar(int operador1, int operador2);
int restar(int operador1, int operador2);
int multiplicar(int operador1, int operador2);
int dividir(int operador1, int operador2);

int main(void) {

	int num1;
	int num2;
	char operacion;
	int resultado;

	scanf("%d", &num1);
	//scanf("%c",&operacion);
	scanf("%d", &num2);

	switch (operacion) {

	case '+':

		resultado = sumar(num1,num2);
		break;

	case '-':
		resultado = restar(num1,num2);
		break;

	case '*':
		resultado = multiplicar(num1,num2);
		break;

	case '/':
		resultado = dividir(num1,num2);
		break;

	}

return EXIT_SUCCESS;
}

int sumar(int operador1, int operador2) {

int resultado;
resultado = operador1 + operador2;

return resultado;
}
int restar(int operador1, int operador2) {

int resultado;
resultado = operador1 - operador2;

return resultado;
}
int multiplicar(int operador1, int operador2) {

int resultado;
resultado = operador1 * operador2;

return resultado;
}
int dividir(int operador1, int operador2) {

int resultado;
if (operador2 != 0) {
	resultado = operador1 / operador2;
}

return resultado;
}
